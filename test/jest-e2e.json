{
  "moduleFileExtensions": ["js", "json", "ts"],
  "rootDir": ".",
  "testEnvironment": "node",
  "testRegex": ".e2e-spec.ts$",
  "maxWorkers": 1,
  "transform": {
    "^.+\\.(t|j)s$": "ts-jest"
  },
  "moduleNameMapper": {
    "^@/test/(.*)$": "<rootDir>/../test/$1",
    "^@/(.*)$": "<rootDir>/../src/$1"
  }
}
